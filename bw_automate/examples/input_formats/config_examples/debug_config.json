{
  "description": "Configuração para debug e desenvolvimento",
  "version": "2.0",
  
  "analysis_settings": {
    "fuzzy_match_threshold": 70,
    "include_temp_tables": true,
    "schemas_to_analyze": ["public", "staging", "development"],
    "max_files_to_analyze": 50,
    "enable_advanced_sql_analysis": true
  },
  
  "reporting": {
    "generate_executive_dashboard": false,
    "generate_technical_report": true,
    "export_to_powerbi": false,
    "include_recommendations": true
  },
  
  "performance": {
    "enable_progress_bars": true,
    "enable_caching": false
  },
  
  "logging": {
    "log_level": "DEBUG",
    "log_to_console": true,
    "log_to_file": true,
    "log_sql_queries": true,
    "log_performance_metrics": true
  },
  
  "validation": {
    "validate_table_names": true,
    "min_confidence_for_recommendations": 60
  }
}